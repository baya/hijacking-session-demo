<!DOCTYPE html>
<html>
<head>
  <title>HijackingSessionDemo</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div id="main">
    <div id="header">
      <div class="message-bar">
	<div class="error">
	  <p><%= flash[:error] %></p>
	</div>
	<div class="notice">
	  <p><%= flash[:notice] %></p>
	</div>
      </div>
    </div>
    <div class="content">
      <%= yield %>
    </div>
  </div>

</body>
</html>
